<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_main_home"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navBarHeight"
            android:translationY="@dimen/navBarTranslationY"
            android:elevation="15dp">
            <LinearLayout
                android:id="@+id/firstItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/navBarItemSidesPadding"
                android:paddingEnd="@dimen/navBarItemSidesPadding"
                android:clickable="true"
                android:background="@drawable/ripple_animation_light_orange_rounded_square"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/firstItemIcon"
                    android:layout_width="@dimen/navBarItemIconSize"
                    android:layout_height="@dimen/navBarItemIconSize"
                    android:src="@drawable/home_icon"/>
                <TextView
                    android:id="@+id/firstItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fresh_orange"
                    android:text="@string/homeSign"
                    android:textSize="@dimen/navBarItemTitleSize"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/secondItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/navBarItemSidesPadding"
                android:paddingEnd="@dimen/navBarItemSidesPadding"
                android:clickable="true"
                android:background="@drawable/ripple_animation_light_orange_rounded_square"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/secondItemIcon"
                    android:layout_width="@dimen/navBarItemIconSize"
                    android:layout_height="@dimen/navBarItemIconSize"
                    android:src="@drawable/car_icon"/>
                <TextView
                    android:id="@+id/secondItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dirty_grey"
                    android:text="@string/tripSign"
                    android:textSize="@dimen/navBarItemTitleSize"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/thirdItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/navBarItemSidesPadding"
                android:paddingEnd="@dimen/navBarItemSidesPadding"
                android:clickable="true"
                android:background="@drawable/ripple_animation_light_orange_rounded_square"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/thirdItemIcon"
                    android:layout_width="@dimen/navBarItemIconSize"
                    android:layout_height="@dimen/navBarItemIconSize"
                    android:src="@drawable/dirty_grey_notifications_bell"
                    android:scaleX="1.2"
                    android:scaleY="1.2"/>
                <TextView
                    android:id="@+id/thirdItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dirty_grey"
                    android:text="@string/inboxSign"
                    android:textSize="@dimen/navBarItemTitleSize"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fourthItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/navBarItemSidesPadding"
                android:paddingEnd="@dimen/navBarItemSidesPadding"
                android:clickable="true"
                android:background="@drawable/ripple_animation_light_orange_rounded_square"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/fourthItemIcon"
                    android:layout_width="@dimen/navBarItemIconSize"
                    android:layout_height="@dimen/navBarItemIconSize"
                    android:src="@drawable/profile_icon"/>
                <TextView
                    android:id="@+id/fourthItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dirty_grey"
                    android:text="@string/profileSign"
                    android:textSize="@dimen/navBarItemTitleSize"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>