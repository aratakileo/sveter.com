<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegistrationVerificationCodeFragment"
    android:background="@color/light_orange">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_orange">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="@string/aLittleMoreSign"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/weAreAlmostDoneSign"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="25dp"/>

            <EditText
                android:id="@+id/confirmationCodeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                android:padding="15dp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textSize="16sp"
                android:maxLength="@integer/confirmationCodeLength"
                android:inputType="numberDecimal"
                android:textColor="@color/dirty_grey"
                android:hint="@string/confirmationCodeHint"
                android:textColorHint="@color/light_grey"
                android:gravity="center_horizontal"
                android:background="@drawable/white_filled_field_background"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/applyVerificationCodeButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="@dimen/filledButtonCornerRadius"
                app:cardBackgroundColor="@color/dark_orange">
                <Button
                    android:id="@+id/applyVerificationCodeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/filled_button_orange_ripple_animation"
                    android:text="@string/applyConfirmationCodeSign"
                    android:textAllCaps="false"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>